import 'package:flutter/material.dart';

class DateItem extends StatelessWidget {
  final int index;

  DateItem({required this.index});

  @override
  Widget build(BuildContext context) {
    bool isSelected = index == 3; // Exemple : sélectionne le 4ème jour
    return Column(
      mainAxisSize: MainAxisSize.min, // Pour limiter la taille de la colonne
      children: [
        Text(
          (index + 3).toString(), // Jour
          style: TextStyle(fontSize: 14, fontWeight: FontWeight.bold), // Taille de police réduite
        ),
        SizedBox(height: 4),
        Container(
          width: 40,
          height: 40,
          decoration: BoxDecoration(
            color: isSelected ? Colors.blue[800] : Colors.transparent,
            border: Border.all(color: Colors.blue[800]!),
            borderRadius: BorderRadius.circular(8),
          ),
          child: Center(
            child: Text(
              "MER", // Exemple pour un jour sélectionné
              style: TextStyle(
                fontSize: 10, // Taille de police réduite
                color: isSelected ? Colors.white : Colors.blue[800],
                fontWeight: FontWeight.bold,
              ),
            ),
          ),
        ),
      ],
    );
  }
}

class DateBar extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return SingleChildScrollView(
      scrollDirection: Axis.horizontal, // Ajout d'un scroll horizontal
      child: Row(
        mainAxisAlignment: MainAxisAlignment.spaceEvenly,
        children: List.generate(7, (index) {
          return Padding(
            padding: const EdgeInsets.symmetric(horizontal: 8.0),
            child: DateItem(index: index),
          );
        }),
      ),
    );
  }
}

